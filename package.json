{
  "name": "animalese-typing",
  "productName": "Animalese Typing",
  "version": "0.0.3",
  "main": "main.js",
  "type": "module",
  "author": {
    "name": "joshxviii",
    "email": "dagexviii.dev@gmail.com"
  },
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:swift": "swiftc swift/swift-key-listener.swift -o swift-key-listener-x64 -target x86_64-apple-macosx13.0 && swiftc swift/swift-key-listener.swift -o swift-key-listener-arm64 -target arm64-apple-macosx13.0 && lipo -create -output swift-key-listener swift-key-listener-x64 swift-key-listener-arm64 && chmod +x ./swift-key-listener",
    "build:mac": "npm run build:swift && electron-builder --mac"
  },
  "build": {
    "asar": true,
    "appId": "com.joshxviii.animalese-typing",
    "productName": "Animalese Typing",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "exports"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/images/icon.png",
      "extendInfo": {
        "NSInputMonitoringUsageDescription": "This app needs access to detect key presses."
      },
      "extraResources": [
        {
          "from": "swift-key-listener",
          "to": "swift-key-listener"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/images/icon.png"
    }
  },
  "license": "MIT",
  "description": "Animalese Typing",
  "repository": "https://github.com/joshxviii/animalese-typing-desktop",
  "dependencies": {
    "@deepfocus/get-windows": "^1.0.21",
    "child_process": "^1.0.2",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "howler": "^2.2.4",
    "iohook": "^0.9.3",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "~24.13.3"
  },
  "iohook": {
    "targets": [
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  }
}
