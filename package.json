{
  "name": "animalese-typing",
  "productName": "Animalese Typing",
  "version": "0.0.3",
  "main": "main.js",
  "author": {
    "name": "joshxviii",
    "email": "dagexviii.dev@gmail.com"
  },
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:swift": "swiftc swift/swift-key-listener.swift -o swift-key-listener",
    "build:mac": "electron-builder --mac --arm64",
    "build:mac:x64": "electron-builder --mac --x64"
  },
  "build": {
    "asar": true,
    "appId": "com.joshxviii.animalese-typing",
    "productName": "Animalese Typing",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "exports"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/images/icon.png",
      "extendInfo": {
        "NSInputMonitoringUsageDescription": "This app needs access to detect key presses."
      },
      "extraFiles": [
        {
          "from": "swift-key-listener",
          "to": "swift-key-listener"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/images/icon.png"
    }
  },
  "license": "MIT",
  "description": "Animalese Typing",
  "repository": "https://github.com/joshxviii/animalese-typing-desktop",
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-is-dev": "^3.0.1",
    "electron-store": "v8.2.0",
    "get-windows": "^9.2.0",
    "howler": "^2.2.4",
    "iohook": "^0.9.3"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "~24.13.3"
  },
  "iohook": {
    "targets": [
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  }
}
